{
  "name": "bragfy",
  "version": "1.0.0",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && cross-env NODE_ENV=production npx prisma generate --schema=prisma/schema.prisma",
    "build": "tsc -p tsconfig.build.json",
    "start": "NODE_ENV=production ts-node src/main.ts",
    "start:prod": "node scripts/setup-prisma.js && npm run build && NODE_ENV=production node dist/main.js",
    "start:render": "npm run deploy && npm run start:prod",
    "predev": "cross-env NODE_ENV=development npx -p dotenv-cli dotenv -e .env.development -- prisma generate --schema=prisma/schema.development.prisma",
    "dev": "cross-env NODE_ENV=development dotenv -e .env.development -- nodemon src/main.ts",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "npx jest --config=tests/botconfig.js",
    "test:watch": "npx jest --watch --config=tests/botconfig.js",
    "test:coverage": "jest --coverage --config=tests/botconfig.js",
    "deploy:prod": "cross-env NODE_ENV=production prisma migrate deploy --schema=prisma/schema.prisma",
    "deploy": "npm run deploy:prod",
    "db:migrate": "cross-env NODE_ENV=development dotenv -e .env.development -- node scripts/prisma-migrate.js --dev --schema=prisma/schema.development.prisma",
    "db:migrate:prod": "cross-env NODE_ENV=production node scripts/prisma-migrate.js --schema=prisma/schema.prisma",
    "migrate:prod": "cross-env NODE_ENV=production node scripts/prisma-migrate.js --schema=prisma/schema.prisma",
    "db:init": "cross-env NODE_ENV=development dotenv -e .env.development -- node scripts/init-database.js --schema=prisma/schema.development.prisma",
    "db:init:prod": "cross-env NODE_ENV=production node scripts/init-database.js --schema=prisma/schema.prisma",
    "studio:prod": "cross-env NODE_ENV=production npx prisma studio --schema=prisma/schema.prisma",
    "studio:dev": "cross-env NODE_ENV=development dotenv -e .env.development -- npx prisma studio --schema=prisma/schema.development.prisma",
    "setup": "node setup.js",
    "generate:dev": "cross-env NODE_ENV=development dotenv -e .env.development -- prisma generate --schema=prisma/schema.development.prisma",
    "generate:prod": "cross-env NODE_ENV=production prisma generate --schema=prisma/schema.prisma",
    "postinstall": "npm run generate:prod",
    "prisma:pull": "cross-env NODE_ENV=production prisma db pull --schema=prisma/schema.prisma",
    "prisma:status": "cross-env NODE_ENV=production prisma migrate status --schema=prisma/schema.prisma",
    "prisma:pull:dev": "cross-env NODE_ENV=development dotenv -e .env.development -- prisma db pull --schema=prisma/schema.development.prisma",
    "prisma:status:dev": "cross-env NODE_ENV=development dotenv -e .env.development -- prisma migrate status --schema=prisma/schema.development.prisma",
    "error-recovery-test": "NODE_ENV=test ts-node tests/error-recovery.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baltazarparra/bragfy.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/baltazarparra/bragfy/issues"
  },
  "homepage": "https://github.com/baltazarparra/bragfy#readme",
  "description": "Telegram bot that helps users record professional activities and generate a clean Brag Document",
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@types/express": "^5.0.1",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "node-nlp": "^5.0.0-alpha.5",
    "node-telegram-bot-api": "^0.65.1",
    "pdf-lib": "^1.17.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@types/axios": "^0.9.36",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.28",
    "@types/node-telegram-bot-api": "^0.64.8",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "axios": "^1.8.4",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.23.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
