{
  "name": "bragfy",
  "version": "1.0.0",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npx prisma generate",
    "build": "tsc -p tsconfig.build.json",
    "start": "NODE_ENV=production ts-node src/main.ts",
    "start:prod": "node scripts/setup-prisma.js && NODE_ENV=production node dist/main.js",
    "dev": "nodemon --exec ts-node src/main.ts",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest --config=tests/botconfig.js",
    "test:watch": "npx jest --watch --config=tests/botconfig.js",
    "test:coverage": "jest --coverage --config=tests/botconfig.js",
    "db:migrate": "cross-env NODE_ENV=development node scripts/prisma-migrate.js --dev",
    "db:migrate:prod": "cross-env NODE_ENV=production node scripts/prisma-migrate.js",
    "migrate:prod": "cross-env NODE_ENV=production node scripts/prisma-migrate.js",
    "db:init": "cross-env NODE_ENV=development node scripts/init-database.js",
    "db:init:prod": "cross-env NODE_ENV=production node scripts/init-database.js",
    "studio:prod": "cross-env NODE_ENV=production npx prisma studio",
    "setup": "node setup.js",
    "generate": "prisma generate",
    "error-recovery-test": "NODE_ENV=test ts-node tests/error-recovery.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baltazarparra/bragfy.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/baltazarparra/bragfy/issues"
  },
  "homepage": "https://github.com/baltazarparra/bragfy#readme",
  "description": "Telegram bot that helps users record professional activities and generate a clean Brag Document",
  "dependencies": {
    "@prisma/client": "6.6.0",
    "@types/express": "^5.0.1",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "node-nlp": "^5.0.0-alpha.5",
    "node-telegram-bot-api": "^0.65.1",
    "pdf-lib": "^1.17.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@types/axios": "^0.9.36",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.28",
    "@types/node-telegram-bot-api": "^0.64.8",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "axios": "^1.8.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  }
}
